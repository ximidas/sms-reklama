<!--Nav-->
<nav class="bg-black pt-2 md:pt-1 pb-1 px-1 mt-0 h-auto fixed w-full z-20 top-0">

  <div class="flex flex-wrap items-center">
    <div class="flex flex-shrink md:w-1/3 justify-center md:justify-start text-white">
      <%= link_to root_path do %>
        <%= image_pack_tag 'logo.png', width: "220", alt: "Logo" %>
      <% end %>
    </div>

    <div class="flex w-full pt-2 content-center justify-between md:w-1/3 md:justify-end">
      <ul class="list-reset flex justify-between flex-1 md:flex-none items-center">
        <li class="<% if current_user %>hoverable <% end %>text-gray-400 hover:bg-custom hover:text-white">
          <% if current_user %>
            <a href="#" class="relative block py-6 px-4 lg:p-6 text-sm text-lg font-bold hover:bg-custom hover:text-white">
              <i class="fas fa-user"></i>
              <%= current_user.email %></a>
            <div class="mega-menu absolute max-w-xs mb-16 sm:mb-0 shadow-xl bg-black" style="left: auto;width: 203px;">

              <ul class="list-reset">
                <li><%= link_to t(:exit), logout_path, class: "relative block py-6 px-2 lg:p-6 text-sm text-lg font-bold" %></li>
              </ul>
            </div>
          <% else %>
            <%= link_to 'enter', class: "relative block py-6 px-2 lg:p-6 text-sm text-lg font-bold" do %>
              <i class="fas fa-door-open"></i>
              <%= t(:enter) %>
            <% end %>
          <% end %>

        </li>
      </ul>
    </div>
  </div>

</nav>

