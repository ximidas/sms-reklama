<!-- Login -->
<div class="w-full md:w-1/2 px-3 pr-8">
  <%= form_tag sessions_path do %>
    <h1 class="font-hairline text-5xl mb-6 text-center"><%= t(:enter_cabinet) %></h1>
    <div class="border-custom p-8 border-t-8 bg-white mb-6 rounded-lg shadow-lg">
      <% unless alert.nil? %>
        <div class="mb-2 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold"><%= t(:attention) %>!</strong>
          <span class="block sm:inline" id="alert"><%= alert %>.</span>
          <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
  </span>
        </div>
      <% end %>

      <div class="mb-4">

        <%= label_tag 'E-mail', nil, :class => "font-bold text-grey-darker block mb-2" %>
        <%= text_field_tag :email, nil, :class => "block appearance-none w-full bg-white border border-grey-light hover:border-grey px-2 py-2 rounded shadow" %>
      </div>

      <div class="mb-4">
        <%= label_tag t(:password), nil, :class => "font-bold text-grey-darker block mb-2" %>
        <%= password_field_tag :password, nil, autocomplete: "current-password", class: "block appearance-none w-full bg-white border border-grey-light hover:border-grey px-2 py-2 rounded shadow" %>
      </div>

      <div class="flex items-stretch items-center">
        <div class="flex-1 text-center px-4 py-2 m-2">
          <%= submit_tag t(:enter), class: "bg-custom hover:bg-black text-white hover:text-custom font-bold py-2 px-4 rounded" %>




        </div>



      </div>

    </div>
  <% end %>
</div>