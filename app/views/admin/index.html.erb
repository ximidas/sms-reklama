
<div class="flex flex-col md:flex-row">


  <%= render 'layouts/admin/sidebar' %>


  <div class="main-content flex-1 bg-gray-100 mt-12 mt-12 md:mt-2 py-8">
    <% unless notice.nil? %>
      <div class="bg-teal-100 border-t-4 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md mb-5" role="alert">
        <div class="flex">
          <div class="py-1"><svg class="fill-current h-6 w-6 text-teal-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg></div>
          <div>
            <p class="font-bold"><%= notice %></p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="flex flex-wrap">
      <div class="w-full md:w-1/2 xl:w-1/3 p-3">
<h1>Заявки</h1>
      <table class="table-auto">
        <thead>
        <tr>
          <th class="px-4 py-2">Имя клиента</th>
          <th class="px-4 py-2">Телефон / E-mail</th>
          <th class="px-4 py-2">Таргет города</th>
          <th class="px-4 py-2">Кол-во sms</th>
          <th class="px-4 py-2">На сумму</th>
          <th class="px-4 py-2">Описание бизнеса</th>
          <th class="px-4 py-2">Описание целевой аудитории</th>
          <th class="px-4 py-2">Тип</th>
          <th class="px-4 py-2">Статус</th>
          <th class="px-4 py-2">Дата и время</th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td class="border px-4 py-2"><%= order.name %></td>
          <td class="border px-4 py-2"><%= order.connection %></td>
          <td class="border px-4 py-2"><%= order.cities %></td>
          <td class="border px-4 py-2"><%= order.sms_quantity %></td>
          <td class="border px-4 py-2"><%= order.price %></td>
          <td class="border px-4 py-2"><%= order.business_description %></td>
          <td class="border px-4 py-2"><%= order.target_audience_description %></td>
          <td class="border px-4 py-2"><%= order.type_order %></td>
          <td class="border px-4 py-2"><%= order.status === 0 ? 'Открытая' : 'Закрытая' %>  <% if order.status === 0 %>
              <%= link_to admin_close_order_request_url(order.id) do %>
                X
              <%  end %>
<% end %> </td>
          <td class="border px-4 py-2"><%= order.created_at.strftime("%d.%m.%Y %H:%M:%S") %></td>
        </tr>
        <% end %>
        </tbody>
      </table>


      </div>
    </div>
  </div>
</div>
